<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer hollow circle - white border only (same as inactive) -->
    <item>
        <shape android:shape="oval">
            <stroke 
                android:width="3dp" 
                android:color="@color/white" />
            <solid android:color="@android:color/transparent" />
            <size 
                android:width="60dp" 
                android:height="60dp" />
        </shape>
    </item>
    
    <!-- No inner circle in active state - it disappears when toggled -->
</layer-list>